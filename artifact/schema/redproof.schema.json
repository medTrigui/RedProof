{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RedProofArtifact",
  "type": "object",
  "required": [
    "commitments",
    "domain",
    "proof",
    "statement",
    "time_utc",
    "tls",
    "version"
  ],
  "properties": {
    "commitments": {
      "$ref": "#/definitions/CommitmentSet"
    },
    "domain": {
      "type": "string"
    },
    "meta": {
      "default": {
        "tool_version": "0.0.0"
      },
      "allOf": [
        {
          "$ref": "#/definitions/ArtifactMeta"
        }
      ]
    },
    "proof": {
      "$ref": "#/definitions/EncodedBlob"
    },
    "statement": {
      "$ref": "#/definitions/Statement"
    },
    "time_utc": {
      "type": "string",
      "format": "date-time"
    },
    "tls": {
      "$ref": "#/definitions/TlsProofContext"
    },
    "version": {
      "type": "string"
    }
  },
  "definitions": {
    "ArtifactMeta": {
      "type": "object",
      "required": [
        "tool_version"
      ],
      "properties": {
        "annotations": {
          "type": "object",
          "additionalProperties": true
        },
        "tool_version": {
          "type": "string"
        }
      }
    },
    "CommitmentSet": {
      "type": "object",
      "required": [
        "app_data",
        "handshake"
      ],
      "properties": {
        "app_data": {
          "$ref": "#/definitions/EncodedBlob"
        },
        "handshake": {
          "$ref": "#/definitions/EncodedBlob"
        },
        "witness": {
          "anyOf": [
            {
              "$ref": "#/definitions/EncodedBlob"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "EncodedBlob": {
      "type": "string"
    },
    "HashAlgorithm": {
      "type": "string",
      "enum": [
        "sha256",
        "blake3"
      ]
    },
    "RegexScope": {
      "type": "string",
      "enum": [
        "headers",
        "body",
        "any"
      ]
    },
    "Statement": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "target",
            "type"
          ],
          "properties": {
            "target": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": [
                "header:present"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "target",
            "type"
          ],
          "properties": {
            "target": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": [
                "header:absent"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "expected",
            "target",
            "type"
          ],
          "properties": {
            "case_sensitive": {
              "type": [
                "boolean",
                "null"
              ]
            },
            "expected": {
              "type": "string"
            },
            "target": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": [
                "header:eq"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "algorithm",
            "digest",
            "type"
          ],
          "properties": {
            "algorithm": {
              "$ref": "#/definitions/HashAlgorithm"
            },
            "digest": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": [
                "hash:eq"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "pattern",
            "type"
          ],
          "properties": {
            "case_sensitive": {
              "default": false,
              "type": "boolean"
            },
            "pattern": {
              "type": "string"
            },
            "scope": {
              "default": "any",
              "allOf": [
                {
                  "$ref": "#/definitions/RegexScope"
                }
              ]
            },
            "type": {
              "type": "string",
              "enum": [
                "regex"
              ]
            }
          }
        }
      ]
    },
    "TlsProofContext": {
      "type": "object",
      "required": [
        "cert_fingerprints",
        "cipher",
        "version"
      ],
      "properties": {
        "alpn": {
          "type": [
            "string",
            "null"
          ]
        },
        "cert_fingerprints": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "cipher": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      }
    }
  }
}
